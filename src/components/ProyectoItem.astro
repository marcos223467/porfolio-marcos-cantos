---
interface Props {
    titulo: string;
    descripcion: string;
    fecha: string;
    link: string;
    img: string;
    tecnologias: string[];
}

const {titulo, descripcion, fecha, link, img, tecnologias} = Astro.props;
---
<a class="card" href={link} target="_blank">
    <div class="card-container">
        <div class="card-image">
            <img src={img} alt="Imagen del proyecto de Lista NavideÃ±a" />
        </div>
        <div class="card-content">
            <h3>{titulo}</h3>
            <p>{descripcion}</p>
            <p>{fecha}</p>
            {
                tecnologias.map((tecnologia) => (
                    <span>{tecnologia}</span>
            ))
            }
        </div>
    </div>
</a>


<style>
    .card{
        text-decoration: none;
        color: black;
        margin: 2%;
    }

    .card-container {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        width: 300px;
        height: 500px;
        border-radius: 10px;
        background-color: #f0f0f0;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .card-image{
        width: 100%;
        height: 50%;
    }

    .card-image img {
        width: 100%;
        height: 100%;
        border-radius: 10px 10px 0 0;
        transition: 0.3s ease;
    }

    .card-image img:hover {
        transform: scale(0.9);
        transition: 0.3s ease;
    }

    .card-content {
        padding: 0 20px 20px 20px;
    }

    .card-content h3 {
        font-size: 1.5em;
        margin-bottom: 10px;
    }

    .card-content p {
        font-size: 1em;
        margin-bottom: 10px;
    }

    .card-content span {
        display: inline-block;
        margin-right: 5px;
        padding: 5px 10px;
        background-color: #838383;
        color: white;
        border-radius: 5px;
    }
</style>