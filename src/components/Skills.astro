---
import Skill from './Skill.astro';

const SKILLS = [
    {
        name: 'JavaScript',
        img: '/Imagenes/Skills/javascript.svg'
    },
    {
        name: 'HTML',
        img: '/Imagenes/Skills/html.svg'
    },
    {
        name: 'CSS',
        img: '/Imagenes/Skills/css.svg'
    },
    {
        name: 'React',
        img: '/Imagenes/Skills/react.svg'
    },
    {
        name: 'Node.js',
        img: '/Imagenes/Skills/node.svg'
    },
    {
        name: 'C++',
        img: '/Imagenes/Skills/cpp.svg'
    },
    {
        name: 'Git',
        img: '/Imagenes/Skills/git.svg'
    },
    {
        name: 'Java',
        img: '/Imagenes/Skills/java.svg'
    },
    {
        name: 'C#',
        img: '/Imagenes/Skills/csharp.svg'
    },
    {
        name: 'Unity',
        img: '/Imagenes/Skills/unity.svg'
    },
    {
        name: 'astro',
        img: '/Imagenes/Skills/astro.svg'
    },
    {
        name: 'Blender',
        img: '/Imagenes/Skills/blender.svg'
    }
]
---

<section>
    <h3>Habilidades</h3>
    <div class="skills">
        {
            SKILLS.map(skill => (
                <Skill name={skill.name} img={skill.img} />
            ))
        }
    </div>
</section>

<style>
    section{
        width: 50%;
        padding: 2%;
    }

    .skills{
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
    }

    @media (max-width: 600px) {
        section{
            width: 90%;
        }
    }
</style>